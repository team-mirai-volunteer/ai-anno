# Project Configuration
project_id     = "your-gcp-project-id"
project_number = "your-gcp-project-number"
project_name   = "ai-anno"
region         = "asia-northeast1"

# Dify Application Secrets (sensitive - keep secure)
dify_secret_key                = "your-dify-secret-key"
dify_plugin_daemon_key         = "your-plugin-daemon-key"
dify_plugin_dify_inner_api_key = "your-plugin-inner-api-key"
dify_server_key                = "your-server-key"
dify_inner_api_key             = "your-inner-api-key"

# Mail Configuration
mail_type              = "smtp"
mail_default_send_from = "noreply@example.com"

# SSH Configuration
ssh_keys = "username:ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAAB... user@example.com"
ssh_source_ranges = ["0.0.0.0/0"]  # Restrict this to your IP ranges for security
iap_ssh_users = [
  "user:your-email@example.com"
]

# Load Balancer Configuration

# For HTTP-only access (no domain required)
enable_ssl = false
enable_cdn = false

# For HTTPS access with domain (uncomment and configure)
# enable_ssl  = true
# domain_name = "ai-anno.example.com"
# enable_cdn  = true  # Optional: Enable CDN for better performance

# Health check configuration
health_check_path = "/health"  # Custom health endpoint added to nginx
health_check_port = 80

# Backend configuration
backend_timeout_sec = 30
session_affinity    = "NONE"  # Or "CLIENT_IP" for sticky sessions
