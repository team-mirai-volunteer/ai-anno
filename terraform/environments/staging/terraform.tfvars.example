# Project Configuration
project_id     = "your-gcp-project-id"
project_number = "your-gcp-project-number"
project_name   = "ai-anno"
region         = "asia-northeast1"

# Dify Application Secrets (sensitive - keep secure)
dify_secret_key = "your-dify-secret-key"
dify_server_key = "your-server-key"
# Note: plugin_daemon_key, plugin_dify_inner_api_key, and dify_inner_api_key are now auto-generated by Terraform

# Mail Configuration
mail_type              = "smtp"
mail_default_send_from = "noreply@example.com"

# SSH Configuration
ssh_source_ranges = ["0.0.0.0/0"]  # Restrict this to your IP ranges for security

# Load Balancer Configuration

# SSL is always enabled. Domain name is required:
domain_name = "ai-anno.example.com"  # Required: Your domain name for HTTPS access
enable_cdn  = false                   # Optional: Enable CDN for better performance

# Health check configuration
health_check_path = "/console/api/ping"  # Dify health check endpoint
health_check_port = 80

# Backend configuration
backend_timeout_sec = 30
session_affinity    = "NONE"  # Or "CLIENT_IP" for sticky sessions

# Dify admin configuration
init_password = "your-admin-password"
# Note: redis_password and code_execution_api_key are now auto-generated by Terraform

# AWS S3 configuration for plugin storage
plugin_s3_access_key = "your-aws-access-key"
plugin_s3_secret_key = "your-aws-secret-key"
plugin_aws_region    = "us-east-1"
plugin_s3_bucket     = "your-s3-bucket-name"

# Notion integration configuration
notion_internal_secret = "your-notion-internal-secret"
